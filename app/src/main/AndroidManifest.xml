<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.wa.invoice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".InvoiceApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".LoadingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecordActivityV2"
            android:label="@string/title_activity_main_activity_v2"
            android:parentActivityName=".LoadingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tw.com.wa.invoice.MainActivity" />
        </activity>

        <activity
            android:name=".AwardActivity"
            android:label="@string/award_name"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
